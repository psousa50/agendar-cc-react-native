{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2016.array.include", "es6", "scripthost", "dom"],
    "jsx": "react",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  }
}
