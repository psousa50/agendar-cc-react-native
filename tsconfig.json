{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "outDir": "lib",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
